<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/items_bg"
    android:layout_marginBottom="15dp"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/media_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/media_text"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/media_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/placeholder"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_more"
        app:layout_constraintStart_toEndOf="@+id/media_image"
         />

    <TextView
        android:id="@+id/download_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_text"
        android:padding="6dp"
        android:singleLine="true"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/media_text"
        app:layout_constraintTop_toBottomOf="@+id/media_text"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/img_more"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_margin="8dp"
        android:background="@drawable/more_button_bg"
        android:contentDescription="@string/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/media_text"
        app:srcCompat="@drawable/baseline_more_vert_24" />


</androidx.constraintlayout.widget.ConstraintLayout>